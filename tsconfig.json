{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "Node",
    "module": "esnext",
    "outDir": "./dist",
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["./app/*"],
      "config/*": ["./config/*"]
    },
    "sourceMap": true
  },
  "include": ["./app", "./config"]
}